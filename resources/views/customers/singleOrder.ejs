<section class="status">
  <div class="container mx-auto">
    <div class="status-box w-2/3 mx-auto">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-xl font-bold">Track Delivery Status</h1>
        <h6 class="bg-dark py-1 rounded-full px-4 text-green-600 text-xs">
          <%= singleorder._id %>
        </h6>
        <!-- singleorder is object. it is converted in to string -->
        <input
          id="hiddenInput"
          type="hidden"
          value="<%= JSON.stringify(singleorder) %>"
        />
      </div>
      <ul>
        <li class="status-line text-xl pb-16" data-status="order_placed">
          <span>Order Placed</span>
        </li>
        <li class="status-line text-xl pb-16" data-status="confirmed">
          <span>Order confirmation</span>
        </li>
        <li class="status-line text-xl pb-16" data-status="prepared">
          <span>Preparation</span>
        </li>
        <li class="status-line text-xl pb-16" data-status="delivered">
          <span>Out for Delivery</span>
        </li>
        <li class="status-line text-xl" data-status="completed">
          <span>Complete</span>
        </li>
      </ul>
    </div>
  </div>
</section>
